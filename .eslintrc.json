{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:vue/essential",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        
        // Basic
        "indent": ["error", 2],
        "no-new": 0,
        "semi": "error",
        "no-irregular-whitespace": 0,

        // Temp
        "vue/no-unused-components": 0,
        "no-unused-vars": 0
    }
}
