{
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "homepage_url": "https://github.com/julien-brousseau/workspacer",
  "description": "Allows to easily save and load tab sets as workspaces.",
  "version": "1.1.2",
  "incognito": "not_allowed",
  "icons": { "48": "/icons/48.svg" },
  "default_locale": "en",
  
  "permissions": [
    "<all_urls>",
    "activeTab",
    "storage",
    "tabs",
    "downloads",
    "contextualIdentities"
  ],

  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "browser_style": true,
    "default_icon": { "48": "/icons/48.svg" }
  }
}
